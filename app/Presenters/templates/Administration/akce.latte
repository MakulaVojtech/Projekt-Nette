{block content}
    <div class="main">
        <div class="main-heading">
            <h1>Přehled událostí</h1>
        </div>
        <a n:href="Akce:add" class="a-add add"><i class="fas fa-plus"></i><span>Vytvořit událost</span></a>
        <table>
            <tr>
                <th>#</th>
                <th>Název</th>
                <th class="hide">Datum</th>
                <th class="hide">Napsal/a</th>
                <th class="hide">Kategorie</th>
                <th class="hide">Ovládací prvky</th>
            </tr>
            {foreach $akce as $a}
                <tr>
                    <td>{$a->akceID}</td>
                    <td><b>{$a->Nadpis}</b></td>
                    <td>{$a->Datum|date: "j. n. Y"}</td>
                    <td>{$a->Uzivatele_ID}</td>
                    <td>{$a->Kategorie_Akce_ID}</td>
                    <td><a n:href='Homepage:akceShow $a->akceID'><i class='fas fa-eye'></i></a>
                        <a n:href='Akce:edit $a->akceID'><i class='fas fa-edit'></i></a>
                        <a n:href='Akce:vymaz $a->akceID'><i class='fas fa-trash-alt'></i></a>
                    </td>
                </tr>
            {/foreach}
        </table>
    </div>
{/block}